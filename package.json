{
  "name": "interop-be-signalhub-qa-tests",
  "version": "1.0.0",
  "description": "This project contains all QA testing for signal-hub environment",
  "scripts": {
    "generate-model:pull": "node ./scripts/pull-signals/generate-api-models.mjs",
    "generate-model:push": "node ./scripts/push-signals/generate-api-models.mjs",
    "cucumber:bun:dev": "export NODE_ENV=dev && bun --bun run cucumber-js -p base",
    "cucumber:bun:uat": "export NODE_ENV=uat && bun --bun run cucumber-js -p base",
    "cucumber:node:dev": "export NODE_ENV=dev && cucumber-js -p base -p node",
    "cucumber:node:uat": "export NODE_ENV=uat && cucumber-js -p base -p node",
    "test": "pnpm cucumber:node:dev -p all",
    "bun:test": "pnpm cucumber:bun -p all",
    "check-steps": "pnpm test -- -p validate",
    "bun:check-steps": "pnpm bun:test -p validate",
    "check-steps:usage": "pnpm check-steps --format usage",
    "bun:check-steps:usage": "pnpm bun:check-steps --format usage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pagopa/interop-be-signalhub-qa-tests.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pagopa/interop-be-signalhub-qa-tests/issues"
  },
  "homepage": "https://github.com/pagopa/interop-be-signalhub-qa-tests#readme",
  "devDependencies": {
    "@cucumber/cucumber": "^10.6.0",
    "@pagopa/eslint-config": "^3.0.0",
    "@types/node": "^20.12.7",
    "@types/uuid": "^9.0.8",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "axios": "^1.6.8",
    "dotenv": "^16.4.5",
    "jose": "^5.2.4",
    "swagger-typescript-api": "^13.0.3",
    "uuid": "^9.0.1",
    "zod": "^3.23.4"
  }
}
